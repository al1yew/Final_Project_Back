@model ResetPasswordVM

<div class="d-flex row justify-content-center w-100">
    <div class="col-lg-10 col-12">
        <h1 class="mt-3">Reset Password</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" class="w-100 d-flex flex-wrap justify-content-between">
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span class="text text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="single-form">
                <button class="btn btn-block btn-warning">Reset Password</button>
            </div>
        </form>
    </div>
</div>

@section Script
{
    <partial name="_ValidationPartial">
}
