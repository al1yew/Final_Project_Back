@model List<ProductReviewGetVM>

@foreach (var review in Model)
{
    @foreach (var img in review.ReviewImages)
    {
        <div class="col-lg-12 col-12 sliderimgkeeper dontclose">

            <img class="img-fluid sliderimageozu" src="~/assets/images/reviews/@review.ProductId/@img.Image" alt="">

            <div class="sliderinfo">
                <div class="stardiv col-lg-3 col-4">
                    @for (int i = 0; i < Math.Round(review.Rating); i++)
                    {
                        <ion-icon name="star" class="staricon yellow"></ion-icon>
                    }
                    @for (int i = 0; i < 5 - Math.Round(review.Rating); i++)
                    {
                        <ion-icon name="star-outline" class="staricon"></ion-icon>
                    }
                </div>
                <div class="col-lg-3 col-4 name">
                    @review.Author
                </div>
                <div class="col-lg-3 col-4 reviewdate">
                    @review.PublishDate.ToShortDateString()
                </div>
                <p class="col-lg-12 col-12">
                    @review.Review
                </p>
            </div>
        </div>
    }

}