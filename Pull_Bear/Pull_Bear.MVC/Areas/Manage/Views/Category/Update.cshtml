@model CategoryUpdateVM

@{
    ViewData["Title"] = "Update";
    SelectList selectListItems = new SelectList(ViewBag.MainCategories, nameof(CategoryCreateVM.Id), nameof(CategoryCreateVM.Name));
}


<div class="d-flex row justify-content-center w-100">
    <div class="col-lg-10">
        <h1 class="mt-3">Update</h1>
        <form method="post" enctype="multipart/form-data" class="w-100">
            <div class="mb-3 form-group col-lg-12 col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col-lg-10 col-10 d-flex justify-content-center align-items-center  ">
                <label asp-for="IsMain" class="form-check-label pe-3"></label>
                <input asp-for="IsMain" class="form-check-input isMaininput ">
            </div>
            <div class="form-group parentcontainer col-lg-12 col-12 d-none">
                <label asp-for="ParentId"></label>
                <select asp-for="ParentId" class="form-control" asp-items="@selectListItems">
                    <option value="">Select Main Category</option>
                </select>
                <span class="text-danger" asp-validation-for="ParentId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
}
