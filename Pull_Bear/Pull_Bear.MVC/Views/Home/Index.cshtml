@model HomeVM

@{
    var prods = Model.Products;
}

<main>
    <section class="whereareyou">
    </section>

    <section id="first">
        <div class="col-lg-12 col-12 section_keeper">
            <!-- <img class="img-fluid" src="~/assets/images/main_Page/background.jpg" alt=""> -->
            <p class="brand_name">P<span>U</span>LL&B<span>E</span>AR</p>
            <p class="trynew">@Model.Settings.FirstOrDefault(x => x.Key == "trynew_class").Value</p>
            <a asp-controller="Shop" asp-action="Index">DISCOVER MORE</a>
            <p class="discount">@Model.Settings.FirstOrDefault(x => x.Key == "discount_class").Value </p>
        </div>
        <div class="overlay"></div>
        <div class="overlay"></div>
        <div class="overlay"></div>
    </section>

    <section id="second">

        <div class="container">
            <p class="mission">OUR <span>MISSION</span> <br> AND VALUE</p>
            <img class="image1" src="~/assets/images/main_Page/home_photo1.jpg" alt="">
            <div class="keeper">
                <img class="image2" src="~/assets/images/main_Page/home_photo2.jpg" alt="">
                <p class="fashion_text">
                    @Model.Settings.FirstOrDefault(x => x.Key == "fashion_text_class").Value
                </p>
            </div>
            <img class="image3" src="~/assets/images/main_Page/home_photo3.jpg" alt="">
            <a class="seemore forcomp" asp-controller="Shop" asp-action="Index">SEE MORE</a>
        </div>

    </section>

    <section id="secondthird">
        <div class="container">
            <div class="mainpart">
                <p class="preorder_prods">HOT SALE!</p>
                <a class="seemore" asp-controller="Shop" asp-action="Index">SEE MORE</a>
            </div>
            <div class="sliderfirst">
                @foreach (ProductListVM product in prods.Where(x => x.IsHotSale).Skip(2).Take(12))
                {
                    <div class="slider_element">
                        <div class="imagekeeper">
                            <a class="wishlist addtowishlist" asp-controller="Wishlist" asp-action="AddToWishlist" asp-route-id="@product.Id">
                                <svg width="31" height="28" viewBox="0 0 31 28" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M8.08333 1C4.17192 1 1 4.13933 1 8.0125C1 11.1391 2.23958 18.5596 14.4413 26.0608C14.6599 26.1938 14.9108 26.2642 15.1667 26.2642C15.4225 26.2642 15.6734 26.1938 15.892 26.0608C28.0938 18.5596 29.3333 11.1391 29.3333 8.0125C29.3333 4.13933 26.1614 1 22.25 1C18.3386 1 15.1667 5.25 15.1667 5.25C15.1667 5.25 11.9948 1 8.08333 1Z"
                                          stroke="#FAFF03" stroke-width="2" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                </svg>
                            </a>
                            <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@product.Id">
                                <img class="img-fluid" src="~/assets/images/Products/@product.Id/@product.ShopImage">
                            </a>
                        </div>
                        <p class="preorder">
                            PREORDER
                        </p>
                        <p class="name">
                            @product.Name
                        </p>
                        <span class="price">
                            @product.DiscountPrice $
                        </span>
                    </div>
                }
            </div>

            <div class="arrows col-lg-4">
                <svg style="margin-bottom: 1px;" class="prevfirst" width="85" height="17" viewBox="0 0 85 17"
                     fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M84 9.5C84.2761 9.5 84.5 9.27614 84.5 9C84.5 8.72386 84.2761 8.5 84 8.5V9.5ZM2 8.5C1.72386 8.5 1.5 8.72386 1.5 9C1.5 9.27614 1.72386 9.5 2 9.5L2 8.5ZM84 8.5L2 8.5L2 9.5L84 9.5V8.5Z"
                          fill="black" />
