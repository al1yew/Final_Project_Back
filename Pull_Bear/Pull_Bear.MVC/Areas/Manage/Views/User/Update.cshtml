@model AppUserUpdateVM

@{ ViewData["Title"] = "Update"; }

<div class="d-flex row justify-content-center w-100">
    <div class="col-lg-12 col-12 d-flex flex-wrap justify-content-between">
        <h1 class="mt-3 ms-2 col-lg-12">Update</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger col-lg-12"></div>
        <form method="post" class="p-5 d-flex col-lg-12 align-items-center flex-wrap justify-content-between">
            <div class="mb-3 col-lg-5 col-8">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 col-lg-5 col-8">
                <label asp-for="SurName" class="form-label"></label>
                <input asp-for="SurName" class="form-control">
                <span class="text-danger" asp-validation-for="SurName"></span>
            </div>
            <div class="mb-3 col-lg-5 col-8">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3 col-lg-5 col-8">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control">
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="col-lg-3 ml-3 form-check" style="display: flex; padding: 20px;">
                <input class="form-check" asp-for="IsAdmin">
                <label class="form-check-label" asp-for="IsAdmin" style="display: flex;justify-content: center;align-items: center;">Is admin?<i class="input-helper"></i></label>
            </div>
            <div class="col-lg-12"></div>
            <button type="submit" class="btn btn-primary mt-3">Update</button>
        </form>
    </div>
</div>

@section Script
{
    <partial name="_ValidationPartial">
}
