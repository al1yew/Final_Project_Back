@model PaginationList<CategoryListVM>

<div class="main-panel ">
    <div class="content-wrapper pt-0 pb-2">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-lg-2 col-12">
                    <h1>Categories</h1>
                </div>
                <div class="col-lg-6 col-12">
                    <form class="">
                        <div class="row justify-content-center align-items-center col-12">
                            <div class="col-lg-3 col-3 align-items-center py-2">
                                <label class="form-label">Type:</label>
                                <select name="type" class="form-select" aria-label="Default select example">
                                    <option selected value="0">All</option>
                                    <option value="1">Sub</option>
                                    <option value="2">Main</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-3 align-items-center py-2">
                                <label class="form-label">Sort By</label>
                                <select name="status" class="form-select" aria-label="Default select example">
                                    <option selected value="0">All</option>
                                    <option value="1">Deleted</option>
                                    <option value="2">Active</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-3 align-items-center py-2">
                                <label class="form-label">Select:</label>
                                <select name="select" class="form-select" aria-label="Default select example">
                                    <option selected value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                </select>
                            </div>
                            <div class="col-lg-3 col-3">
                                <button class="btn btn-primary" type="submit">Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-1 col-3">
                    <a class="btn btn-success" asp-area="Manage" asp-controller="Category" asp-action="Create">Create</a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    @await Html.PartialAsync("_CategoryIndexPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
