@model IDictionary<string, string>

@{
    ViewData["Title"] = "Index";
}

<div class="main-panel ">
    <div class="content-wrapper pt-0 pb-2 p-0" style="padding-left: 0; padding-right:0">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-lg-12 col-12">
                    <h3>Settings</h3>
                </div>
            </div>
            <div class="row justify-content-center align-items-center">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="col-lg-2">Name</th>
                            <th class="col-lg-6">Value</th>
                            <th class="col-lg-4">Setting</th>
                        </tr>
                    </thead>
                    <tbody class="settings">
                        @await Html.PartialAsync("_SettingIndexPartial", Model)
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


