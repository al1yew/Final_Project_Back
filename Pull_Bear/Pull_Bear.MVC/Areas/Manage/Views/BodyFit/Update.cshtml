@model BodyFitUpdateVM

@{
    ViewData["Title"] = "Update";
}


<div class="d-flex row justify-content-center w-100">
    <div class="col-lg-10 col-12">
        <h1 class="mt-3">Update</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" enctype="multipart/form-data" class="w-100">
            <div class="mb-3 form-group col-lg-12 col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="col-lg-12 col-12 d-flex justify-content-between align-items-center  mb-3">
                <label asp-for="GenderId" class="form-label ">Gender</label>
                <select asp-for="GenderId" class="form-control w-75" asp-items="Html.GetEnumSelectList<GenderList>()">
                    <option value="">Select Gender</option>
                </select>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Photo" class="form-label"></label>
                <input asp-for="Photo" class="form-control p-2" type="file" accept="image/*">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
}
