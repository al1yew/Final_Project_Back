@model ContactCreateVM

<main>

    <section class="whereareyou">
        <div class="where">.</div>
    </section>

    <section class="breadcrumbregsiter">
        <div class="container">
            <div class="row keeper">
                <div class="col-lg-6">
                    <a asp-controller="Home" asp-action="Index">MAIN PAGE</a>&nbsp;/ CONTACT
                </div>
            </div>
        </div>
    </section>

    <section class="contact">
        <div class="container">
            <div class="row all">
                <p class="firstp col-lg-12 col-12">CONTACT US</p>
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Contact" asp-action="Contact" class="col-lg-6 col-12" id="formcontact" method="post">
                    <input asp-for="Name" type="text" id="contactname" placeholder="Name" required
                           class="col-lg-12 col-12">
                    <input asp-for="Surname" type="text" id="contactsurname" placeholder="Surname" required
                           class="col-lg-12 col-12">
                    <input asp-for="Phone" type="tel" id="contactphone" placeholder="Phone" required
                           class="col-lg-12 col-12">
                    <input asp-for="Email" type="email" id="contactemail" placeholder="Email" required
                           class="col-lg-12 col-12">
                    <textarea asp-for="Message" class="col-12 col-lg-12" id="contacttext" cols="10" rows="10"
                              placeholder="Your Text"></textarea>
                    <button type="submit" form="formcontact" class="col-lg-12 col-12">SEND</button>
                </form>
            </div>
        </div>
    </section>

</main>

