@model ColorCreateVM

@{
    ViewData["Title"] = "Create";
}


<div class="d-flex row justify-content-center w-100">
    <div class="col-lg-10 col-12">
        <h1 class="mt-3">Create</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" enctype="multipart/form-data" class="w-100 d-flex flex-wrap justify-content-between">
            <div class="mb-3 form-group col-lg-5 col-5">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group col-lg-5 col-5">
                <label asp-for="HexCode" class="form-label"></label>
                <input asp-for="HexCode" class="form-control" maxlength="8" pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" title="Match hexcode!" />
                <span asp-validation-for="HexCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <div class="col-lg-12 col-12 d-flex justify-content-between align-items-center mt-5">
            <input type="text" style="width: 25% !important;margin-right: 30px;" class="getcolorname form-control " id="getcolorname" value="" maxlength="8" pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$">
            <span class="apiclick" style="border: 1px solid black; padding:5px;margin-right: 20px;cursor:pointer; font-size:10px">Get Preferred Color</span>
            <input type="text" disabled class="fromapi form-control" style="width: 25% !important; padding:5px;">
        </div>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
}
