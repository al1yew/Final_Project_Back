@model CardCreateVM

<div class="formcardkeeper formkeeper col-lg-5 col-12">
    <span class="closeform">
        <ion-icon name="close-circle-outline"></ion-icon>
    </span>
    <div class="col-12 col-lg-12 bash">
        <div class="left col-lg-3 col-3">
            <span class="first ">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <circle cx="9" cy="9" r="8.5" stroke="black" />
                    <circle cx="9" cy="9" r="3" fill="black" />
                </svg>
            </span>
            <span class="second ">
                CARD
            </span>
        </div>
        <div class="right col-lg-3 col-3">
            <span class="first col-6 col-lg-8">
                <img class="img-fluid col-lg-6 col-6" src="~/assets/images/settings/mastercard.jpg"
                     alt="">
            </span>
            <span class="second col-4 col-lg-4">
                <img class="img-fluid col-lg-12 col-12" src="~/assets/images/settings/visa.jpg"
                     alt="">
            </span>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
    <form id="changecardform" method="post" asp-controller="Order" asp-action="CreateCard" class="col-lg-12 col-12 changecardform" enctype="multipart/form-data">

        <label asp-for="CardNo" class="col-12 col-lg-12"><span>*</span> CARD NUMBER</label>
        <input asp-for="CardNo" name="cardno" id="cardno" class="col-12 col-lg-12" type="text" required placeholder="0000 0000 0000 0000" maxlength="16">

        <div class="checkoutcity col-6 col-lg-6">
            <label asp-for="Name" class="col-12 col-lg-12"><span>*</span>NAME</label>
            <input asp-for="Name" name="name" id="cardname" class="col-12 col-lg-12" type="text" required title="Name must be contain only letters!">
        </div>

        <div class="checkoutcountry col-6 col-lg-6">
            <label asp-for="Surname" class="col-12 col-lg-12"><span>*</span>SURNAME</label>
            <input asp-for="Surname" name="surname" id="cardsurname" class="col-12 col-lg-12" type="text" required title="Surname must be contain only letters!">
        </div>

        <div class="checkoutcity col-6 col-lg-6">
            <label asp-for="ExpireDate" class="col-12 col-lg-12"><span>*</span>EXPIRE DATE</label>
            <input asp-for="ExpireDate" name="expiredate" id="expire" class="col-12 col-lg-12" type="text" required placeholder="MM/YYYY" pattern="\d{2}\/\d{4}" maxlength="7">
        </div>

        <div class="checkoutcountry col-6 col-lg-6">
            <label asp-for="CVV" class="col-12 col-lg-12"><span>*</span>CVV/CVC</label>
            <input asp-for="CVV" name="cvv" id="cvv" class="col-12 col-lg-12" type="text" required pattern="^[0-9]{3,4}$" maxlength="4">
        </div>

        <div class="checkoutcity col-5-8 col-lg-5-8">
            <button form="changecardform" type="submit" class="cardchangebtn " value="save">SAVE</button>
        </div>

        <div class="checkoutcity col-5-8 col-lg-5-8">
            <button form="changecardform" type="submit" class="cardchangebtn " value="dontsave">DON'T SAVE</button>
        </div>

    </form>
</div>