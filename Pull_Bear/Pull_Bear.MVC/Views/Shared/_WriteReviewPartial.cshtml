@model WriteReviewVM

<div asp-validation-summary="ModelOnly">   </div>
<form method="post" enctype="multipart/form-data" id="postreview" class="col-lg-12 postreviewform col-12" asp-controller="Shop" asp-action="AddReview" asp-route-id="@ViewBag.ProductId">

    <div class="col-lg-3 col-4-5 inpkeeper">
        <input asp-for="Name" id="reviewname" class="col-lg-12 col-12"
               placeholder="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>

        <input asp-for="Surname" id="reviewsurname" class="col-lg-12 col-12"
               placeholder="Surname" required>
        <span asp-validation-for="Surname" class="text-danger"></span>

    </div>

    <textarea asp-for="Review" class="col-lg-6 col-7 reviewarea" id="reviewtext"
              placeholder="Your review..." required></textarea>
    <span asp-validation-for="Review" class="text-danger"></span>

    <span class="clearreview" style="right: 22.7%;">
        <ion-icon name="close-outline" class="clearreviewicon"></ion-icon>
    </span>

    <label for="upload">
        <ion-icon name="cloud-upload-outline" style="font-size: 30px; cursor:pointer"></ion-icon>
        <input asp-for="Photos" multiple type="file" id="upload" style="display:none">
    </label>

    <div class="col-lg-1-5 col-12 lastdiv">
        <button type="submit" class="addreviewbtn col-lg-12 col-4-5"
                form="postreview" data-prodid="@ViewBag.ProductId">
            POST
        </button>

        <select asp-for="Rating" class="star_rating col-lg-12 col-7">
            <option value="5"></option>
            <option value="4"></option>
            <option value="3"></option>
            <option value="2"></option>
            <option value="1"></option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>

    </div>
</form>

@section Script{
    <partial name="_ValidationPartial">
}
